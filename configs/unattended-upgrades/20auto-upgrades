// Baixar pacotes atualizáveis automaticamente (1 = habilitado)
APT::Periodic::Download-Upgradeable-Packages "1";

// Executar unattended-upgrades diariamente (1 = habilitado)
APT::Periodic::Unattended-Upgrade "1";

// Remover pacotes obsoletos do cache a cada 7 dias
